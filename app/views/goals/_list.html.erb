<div class="row">
<% @goals.each do |goal| %>
  <div class="col-w-50 mt-1">
    <div class="card mr-1">
      <div class="card-header">
        <div class="row no-gutters justify-content-between">
          <div class="col">
            <h2 class="mb-0 mr-1"><%= goal.title %></h2>
          </div>
          <div class="col modify-icon-container">
            <%= link_to image_tag(image_path('edit_32.png'), size:'32x32', class: 'mr-2p'), edit_goal_path(goal) %><%= link_to image_tag(image_path('del_32.png'), size:'32x32'), goal_path(goal), data: { method: :delete, confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="progress">
          <div class="progress-bar <%= goal.progress_class %>" role="progressbar" style="width: <%= goal.display_percent_complete %>%" aria-valuenow="<%=goal.display_count %>" aria-valuemin="0" aria-valuemax="<%=goal.display_target %>"></div>
        </div>
        <div class="row no-gutters justify-content-between">
          <div class="col card-text <%= goal.progress_color_class %>">
            <%= goal.progress_description %>
            <%= goal.activity_list(goal_activities_path(goal)) %>
          </div>
          <div class="col add-icon-container">
            <%= link_to image_tag(image_path('plus.png'), size:'16x16', class:'mt-1 float-right'), new_activity_path(activity_id: goal.activity_id) %>
          </div>
        </div>
        <div class="row subtext">
          <%= goal.display_date %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
<% if @goals.empty? %>
<div class="col card-text">
  You don't have any goals yet...why don't you add one?
</div>
<% end %>
