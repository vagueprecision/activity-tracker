<p id="notice"><%= notice %></p>

<h1><%= Time.now.year %>'s Goals</h1>
<% if @goals.present? %>
<div class="row">
<% end %>
<% @goals.each_with_index do |goal, index| %>
<% if index % 2 == 0 %>
</div>
<div class="row">
<% end %>
  <div class="col-w-50 mt-1">
    <div class="card mx-1">
      <div class="card-body">
        <h2 class="card-title"><%= goal.title %></h2>
        <div class="progress">
          <div class="progress-bar <%= goal.progress_class %>" role="progressbar" style="width: <%= goal.display_percent_complete %>%" aria-valuenow="<%=goal.display_count %>" aria-valuemin="0" aria-valuemax="<%=goal.display_target %>"></div>
        </div>
        <p class="card-text"><%= goal.progress_description %></p>
        <p class="card-text">
          <%= goal.met? %>
        </p>
        <p>
          <%= link_to image_tag("/images/plus.png"), new_user_activity_path(activity_id: goal.activity_id) %>
          <%= link_to image_tag("/images/edit_32.png"), edit_user_goal_path(goal) %>
          <%= link_to image_tag("/images/del_med.png"), goal, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      </div>
    </div>
  </div>
<% end %>
<% if @goals.present? %>
</div>
<% end %>

<ul>
  <% @activities.each do |activity| %>
  <li>
    <%= activity.name %> - <%= activity.count %><%= link_to 'Add Progress <plus icon>', new_user_activity_path(activity_id: goal.activity_id) %>
  </li>
  <% end %>
</ul>



